---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }} - Events</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/events/</link>
    <atom:link href="{{ "/events_feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% assign events = site.events | sort: 'eventdate' | where: 'status', 'upcoming' %}
    {% for event in events limit:10 %}
      <item>
        <title>{{ event.title | xml_escape }}</title>
        <description>
          I'll be speaking at {{ event.title | xml_escape }}
        </description>
        <pubDate>{{ event.date | date_to_rfc822 }}</pubDate>
        <link>{{ event.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ event.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% for tag in event.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
      </item>
    {% endfor %}
  </channel>
</rss>
